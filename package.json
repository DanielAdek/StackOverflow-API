{
  "name": "StackOverflow_API",
  "version": "1.0.0",
  "description": "A simple CRUD operation built with Node and Typescript.",
  "main": "app.ts",
  "repository": "https://github.com/DanielAdek/StackOverflow_API.git",
  "author": "DanielAdek <maildaniel.me1@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/app.js",
    "watch-node": "nodemon dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node-Express\" -c \"blue.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/app.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@types/jsend": "^1.0.28",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "form-my-simple-validation": "^0.0.11",
    "jsend": "^1.1.0",
    "minified-headless": "^0.1.0",
    "module-alias": "^2.2.2",
    "moment": "^2.24.0",
    "mongoose": "^5.8.3",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "uuidv4": "^6.0.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.17.2",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.5.36",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuidv4": "^5.0.0",
    "concurrently": "^5.0.2",
    "nodemon": "^2.0.2"
  },
  "_moduleAliases": {
    "@modules": "dist/",
    "@models": "dist/models",
    "@controllers": "dist/controllers",
    "@routes": "dist/routes",
    "@util": "dist/util",
    "@helpers": "dist/helpers"
  }
}
